{% extends 'frontend/default/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Update Profile
                </div>
                <div class="panel-body">

                    {{ form(new FormView(), {'method': 'GET'}) }}

                    <div class="form-group">
                        <label for="">Name</label>
                        <input type="text" name="name" class="form-control" value="{{ app.user.name }}">
                    </div>

                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="email" class="form-control" value="{{ app.user.email }}" disabled="disabled">
                    </div>

                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" name="password" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="">Confirm Password</label>
                        <input type="password" name="confirm_password" class="form-control">
                    </div>

                    <div class="form-group">
                        <input type="button" class="btn btn-primary btn-sm" value="Update Profile">
                    </div>

                    {{ form_end(new FormView()) }}

                </div>
            </div>

        </div>
    </div>
{% endblock %}